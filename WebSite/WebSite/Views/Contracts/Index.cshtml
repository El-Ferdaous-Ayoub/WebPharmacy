@model IEnumerable<Classes.Contract>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contracts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee)
        </th>
        <th>
            Contract
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>
        <th>
            @Html.ActionLink(" ", "Create", null, new { @class = "LinkCreate" })
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.Employee.NIC)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Start)
    </td>
    <td>
        <a href="~/Content/Documents/@item.Document">Contract</a>
    </td>
    <td>
        @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "LinkEdit" })
        @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "LinkMore" })
    </td>
</tr>
}

</table>
