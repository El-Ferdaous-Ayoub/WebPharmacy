@model Classes.Models.UserModel

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String img = "PNG/User.png";
    if (!String.IsNullOrEmpty(Model.Photo))
    {
        img = "Images/Users/" + WebSite.Models.Account.User.Photo;
    }
}

@*<link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" 
      integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">*@
<h2>Profile</h2>


<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserName)

<div>
    <h4></h4>
    <div class="form-group">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
        @Html.ActionLink("Edit", "EditUserName", null, new { @class = "btn btn-info d-inline" })
        @Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "btn btn-primary d-inline" })
    </div>
</div>

    <div style="overflow: auto;display:block">
        <hr />
        <h4>Personal Info</h4>
        <div style="width: 80%; float:left">
            <div class="form-group">
                @Html.LabelFor(model => model.NIC, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
                @Html.EditorFor(model => model.NIC, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
                @Html.ActionLink("Edit", "EditPersonalInfo", null, new { @class = "btn btn-info d-inline" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
                @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
            </div>
        </div>
        <div style="width: 20%; float:right">
            <img src='~/Content/@img' alt="Alternate Text" width="200" height="200" class="img-thumbnail d-inline">
        </div>
    </div>

    <div>
        <hr />
        <h4>Contact</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
            @Html.ActionLink("Edit", "EditContact", null, new { @class = "btn btn-info d-inline" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone2, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.Phone2, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-4 d-inline" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-md-4 d-inline" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.District, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
            @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
        </div>
    </div>

    @if (WebSite.Models.Account.Department != null)
    {
<div>
    <hr />
    <h4>Job</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.Departement_Title, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
        @Html.EditorFor(model => model.Departement_Title, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Health_Coverage, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
        @Html.EditorFor(model => model.Health_Coverage, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BankAccountN, htmlAttributes: new { @class = "control-label col-md-2 d-inline" })
        @Html.EditorFor(model => model.BankAccountN, new { htmlAttributes = new { @class = "form-control col-md-2 d-inline" } })
    </div>
</div>
    }

</div>

@section Scripts{
    <script>
        $(function () {
            $('input').prop('disabled', true)

        })

    </script>
