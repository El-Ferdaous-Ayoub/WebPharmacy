@{
    String Title = (WebSite.Models.Config.Pharmacy != null) ? WebSite.Models.Config.Pharmacy.Name : "Pharmcy";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Title</title>

    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/Layout/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/googleapis.css" rel="stylesheet">
    <link href="~/Content/Table.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <li>
                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Home/Index">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-laugh-wink"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">@Title <sup></sup></div>
                </a>

                <!-- Divider -->

            </li>

            <!-- Nav Item - Dashboard -->
            @if (WebSite.Models.Account.Department != null)
            {
                if (WebSite.Models.Account.Department.Pharmacy_Info)
                {
                    <li class="nav-item active">
                        <hr class="sidebar-divider my-0">
                        <a class="nav-link" href="/Pharmacy/Create">
                            <i class="fa fa-info-circle"></i>
                            <span>Pharmacy</span>
                        </a>
                    </li>
                }

                if (WebSite.Models.Account.Department.Departments
                    || WebSite.Models.Account.Department.Employees
                    || WebSite.Models.Account.Department.Contracts)
                {
                    <li>
                        <!-- Divider -->
                        <hr class="sidebar-divider">

                        <!-- Heading -->
                        <div class="sidebar-heading">
                            Human Resources
                        </div>
                    </li>
                    if (WebSite.Models.Account.Department.Departments)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Departments">
                                <i class="fas fa-tasks"></i>
                                <span>Departments</span>
                            </a>
                        </li>
                    }
                    if (WebSite.Models.Account.Department.Employees)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Employees">
                                <i class='fas fa-user-tie'></i>
                                <span>Employment</span>
                            </a>
                        </li>
                    }
                    if (WebSite.Models.Account.Department.Contracts)
                    {
                        <li class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#Contracts" aria-expanded="true" aria-controls="collapseUtilities">
                                <i class="fas fa-file-contract"></i>
                                <span>Contracts</span>
                            </a>
                            <div id="Contracts" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <a class="collapse-item" href="/Contracts">Employee Contract</a>
                                </div>
                            </div>
                        </li>
                    }
                }

                if (WebSite.Models.Account.Department.Categories
                    || WebSite.Models.Account.Department.Producers
                    || WebSite.Models.Account.Department.Products
                    || WebSite.Models.Account.Department.Orders)
                {
                    <li>
                        <!-- Divider -->
                        <hr class="sidebar-divider">

                        <!-- Heading -->
                        <div class="sidebar-heading">
                            Stock
                        </div>
                    </li>
                    if (WebSite.Models.Account.Department.Categories)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Categories">
                                <i class="fas fa-list-alt"></i>
                                <span>Categories</span>
                            </a>
                        </li>
                    }
                    if (WebSite.Models.Account.Department.Producers)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Producers">
                                <i class="fas fa-industry"></i>
                                <span>Producers</span>
                            </a>
                        </li>
                    }
                    if (WebSite.Models.Account.Department.Products)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Products">
                                <i class="fas fa-boxes"></i>
                                <span>Products</span>
                            </a>
                        </li>
                    }
                    if (WebSite.Models.Account.Department.Orders)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Orders">
                                <i class="far fa-edit"></i>
                                <span>Orders</span>
                            </a>
                        </li>
                    }

                }

              
                    <hr class="sidebar-divider d-none d-md-block">
                    <!-- Sidebar Toggler (Sidebar) -->
                    <div class="text-center d-none d-md-inline">
                        <button class="rounded-circle border-0" id="sidebarToggle"></button>
                    </div>
               
            }

        </ul>

        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>



                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">


                        <li>
                            <div class="topbar-divider d-none d-sm-block"></div>
                        </li>

                        <!-- Nav Item - User Information -->
                        @if (WebSite.Models.Account.User != null)
                        {

                            String img = "PNG/User.png";
                            if (!String.IsNullOrEmpty(WebSite.Models.Account.User.Picture))
                            {
                                img = "Images/Users/" + WebSite.Models.Account.User.Picture;
                            }
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">@WebSite.Models.Account.User.LastName @WebSite.Models.Account.User.FirstName</span>
                                    <img class="img-profile rounded-circle" src='~/Content/@img'>
                                </a>
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="#" id="ProfileLink">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Profile
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href='#' id="LogoutLink" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </a>
                                </div>
                            </li>
                        }
                        @if (WebSite.Models.Account.User == null)
                        {
                            @Html.ActionLink("Login", "Login", "Account",null,new {@class = "btn btn-defualt" })
                        }
                    </ul>
                </nav>

                <div class="container-fluid">

                    @RenderBody()

                    <hr />
                   
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/Layout/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Layout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/Layout/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/Layout/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Content/Layout/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Content/Layout/js/demo/chart-area-demo.js"></script>
    <script src="~/Content/Layout/js/demo/chart-pie-demo.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/Scripts/Style.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $("#LogoutLink").click(function () {
                window.location.href = '/Account/Logout/';
            })
            $("#ProfileLink").click(function () {
                window.location.href = '/Account/UserProfile/';
            })
            $("div .col-md-10 > input[type='text']").prop("class", "form-control col-md-4")
            $("div .col-md-10 > textarea").prop("class", "form-control col-md-6")
            $("div .col-md-10 > input[type='email']").prop("class", "form-control col-md-6")
            $("div .col-md-10 > input[type='tel']").prop("class", "form-control col-md-4")
            $("div .col-md-10 > input[type='number']").prop("class", "form-control col-md-4")
            $("div .col-md-10 > select").prop("class", "form-control col-md-4")
            $(".LinkCreate").prop("class", "btn btn-outline-primary fas fa-plus")
            $(".LinkEdit").prop("class", "btn btn-outline-success fas fa-edit")
            $(".LinkMore").prop("class", "btn btn-outline-info fas fa-cog")
            $(".LinkBack").prop("class", "btn btn-outline-secondary fas fa-chevron-left")
            $(".btnCreate").prop("class", "btn btn-primary")
            $(".btnEdit").prop("class", "btn btn-primary")
            $(".btnDelete").prop("class", "btn btn-danger")
            $(".btnSave").prop("class", "btn btn-info")
            $(".btnSearch").prop("class", "btn btn-primary fa fa-search")
            $("table").prop("class", "table table-striped table-head-fixed text-nowrap")
            $(".tbl").prop("style", "height: 70vh;")
        })
    </script>
</body>
</html>
